@model  ikloud_Aflatoon.Models.ErrorDisplay
@{
    ViewBag.header = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (ViewBag.extra == true)
    {
        <script type="text/javascript">
        alert('@ViewBag.popmsg');
        </script>
    }
}

<div class="w3-container w3-center">
    <h3>
        @Model.ErrorMessage
    </h3>
    <h5>
        Please Login Again.
    </h5>

    <small>@Html.ActionLink("Click here to login", "Index", "Login")</small>
</div>

