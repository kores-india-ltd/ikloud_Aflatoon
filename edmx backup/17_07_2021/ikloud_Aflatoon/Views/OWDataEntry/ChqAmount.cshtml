@model IEnumerable<ikloud_Aflatoon.ChequeAmountCapture>
@{
    ViewBag.Title = "Cheque Amount";
    ViewBag.header = "Cheque Amount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "@Url.Content("~/xhtml1-transitional.dtd")>

<script src="~/Scripts/Json2.js"></script>
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/modernizr-2.8.3.js"></script>
<script src="~/Scripts/jQueryRotate.js"></script>
<script src="~/Scripts/OWAmount.js"></script>

<script type="text/javascript">
    var RootUrl = '@Url.Content("~/")';
</script>
<input type="hidden" id="nodata" value="@ViewBag.cnt" />
<input type="hidden" name="DEbySnpt" id="DEbySnpt" value="@Session["OWDEBySnippet"].ToString()" />

@if (ViewBag.cnt == false)
{
    <script type="text/javascript">
        alert('No Data Found!!');
    </script>
}
else
{
    <body class="w3-container w3-center">
        <div id="AcSnipimg">
            <img id="myimg" class="w3-card-8 w3-image" src="~/Icons/noimagefound.jpg" />
        </div>
        <div>
            <div id="AcFullimg" class="w3-card-8 w3-image" style="display:none">
                <object id="myfulimg" data="~/Icons/noimagefound.jpg" type="image/jpg" style="cursor: zoom-in" onclick="fullImage();"></object>
            </div>
        </div>
        <div id="imgzoom" class="w3-modal w3-animate-zoom " onclick="this.style.display='none'">
            <img id="myfulimgzoom" class="w3-modal-content w3-card-8 w3-image" style="width: 90%; cursor: zoom-out" src="~/Icons/noimagefound.jpg" />
        </div>
        @*<div style="padding-left:10%">
                <img id="myimg" src="http://ABID//ImageServer//iKloudIwImages/09.11.2015/4/11.jpg" alt="ItemImg" style="width:600px;height:300px" />
            </div>*@
        <div>
            <br />
        </div>
        <form class="w3-form">
            <div>
                <span class="w3-label" style="font-weight:700;text-align:left">  Cheque Amount:</span>
                <input  style="width: auto;font-weight:700" type="text" id="chqAmount" maxlength="14" autocomplete="off" name="chqAmount" />
            </div>
            <div>
                <input type="hidden" id="cnt" value="1" />
                <input type="hidden" id="tempcnt" value="1" />
            </div>
            <div>
                <br />
            </div>
            <div style="float:inherit" class="w3-container">

                <input class="w3-btn w3-margin-left" type="button" name="btnok" id="btnok" value="Accept" />
                <input class="w3-btn" type="button" id="btnback" value="Back" />
                @*@*<input class="w3-btn" type="button" id="btnRefer" value="Refer" />
                    <input class="w3-btn" type="button" id="btnRejct" value="Reject" />*@
                <input class="w3-btn" type="button" name="bbtnClose" id="bbtnClose" value="Close" />

            </div>
        </form>

    </body>

    <script language="javascript" type="text/javascript">

        var array = @Html.Raw(

             Json.Encode(
                 (Model).Select(m=> new
                 {
                     Id = m.Id,
                     FrontGreyImagePath = m.FrontGreyImagePath,
                     Amount1 = m.Amount1,
                     Amount2=m.Amount2,
                     FrontTiffImagePath = m.FrontTiffImagePath,
                     Status= m.Status,
                     Action=m.Action,
                     RawDataId = m.RawDataId,
                     CustomerId = m.CustomerId,
                     DomainId=m.DomainId,
                     ScanningNodeId=m.ScanningNodeId,
                     ChequeAmountSettings=m.ChequeAmountSettings,
                     //BranchCode= m.BranchCode,
                     //BatchNo= m.BatchNo,
                     //BatchSeqNo = m.BatchSeqNo,
                 })
             )
         );
        if (document.getElementById('nodata').value != false)
        {
            //alert('ok');
            passval(array);
        }
    </script>
}
<div id="result">

</div>

