    <div class="w3-card-12 w3-dark-grey w3-center">
        @if (ViewBag.dwnFname != null || ViewBag.dwnFname != "")
        {
            <a href='@Url.Action("IWCreateFile", "IWFileUpload", new { id = ViewBag.dwnFname })'>@ViewBag.dwnFname</a>
            <script type="text/javascript">
                document.getElementById('loader').style.display = "none";
            </script>
        }
    </div>
</div>

