@{
    ViewBag.Title = "File Upload";
    ViewBag.header = "File Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/FileUpload.js"></script>

<script type="text/javascript">
    function lode()
    {
        document.getElementById('loader').style.display = "";
    }
</script>
<h3 style="color: green">@ViewBag.Message</h3>
<h4>@ViewBag.Counts</h4>
<div class="w3-container  w3-grey">

    @using (Html.BeginForm("IWReturnUpload", "IWFileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary();
        <div><br /></div>
        <div class="w3-center">
            <input class="w3-large" style="font-weight:900" type="file" id="fileToUpload" name="file" />
            <span class="field-validation-error w3-label" id="spanfile"></span>
            <input class="w3-btn" type="submit" id="btnSubmit" value="Upload" onclick="lode();" />
            <label id="loader" style="display:none"> <span style="color:red">  Uploading...</span><img src="~/Content/images/progressss.gif" /></label>
        </div>


