@model ikloud_Aflatoon.Infrastructure.ActivityLogViewModal

<style>

    /* Style for scrollable table container */
    .scrollable-table {
        overflow-x: auto;
        white-space: nowrap;
        margin-bottom: 16px;
        border: 1px solid #ccc; /* Optional border for clarity */
        padding: 8px;
        background-color: #f9f9f9; /* Light background for better visibility */
    }

    /* Table styles */
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 14px;
    }

        .styled-table th,
        .styled-table td {
            text-align: left;
            padding: 8px;
            border: 1px solid #ddd;
        }

        .styled-table thead {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    /* Style for <hr> separator */
    hr {
        border: 0;
        border-top: 2px solid #ccc;
        margin: 24px 0;
    }

</style>
<div>
    <h4>L1 Verification</h4>
    <div class="scrollable-table">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>ChequeNo</th>
                    <th>L1 ChequeNo</th>
                    <th>Cheque Modified</th>

                    <th>SortCode</th>
                    <th>L1 SortCode</th>
                    <th>SortCode Modified</th>

                    <th>SAN</th>
                    <th>L1 SAN</th>
                    <th>SAN Modified</th>

                    <th>TC</th>
                    <th>L1 TC</th>
                    <th>TC Modified</th>

                    <th>AccountNo</th>
                    <th>L1 AccountNo</th>
                    <th>Account Modified</th>

                    <th>L1 Status</th>
                    <th>L1 By</th>
                    <th>L1 TimeStamp</th>


                </tr>
            </thead>
            <tbody>
                @if (Model.Get_OWL1ActivityLog != null && Model.Get_OWL1ActivityLog.Any())
                {

                    foreach (var item in Model.Get_OWL1ActivityLog)
                    {
                        <tr>
                            <td>@item.L1_ChequeNo</td>
                            <td>@item.L1_AL_ChequeNo</td>
                            <td>
                                @(item.L1_ChequeNo_Comparison == "Matched" ? "N" : "Y")
                            </td>


                            <td>@item.L1_SortCode</td>
                            <td>@item.L1_AL_SortCode</td>
                            <td>@(item.L1_SortCode_Comparison == "Matched" ? "N" : "Y")</td>

                            <td>@item.L1_SAN</td>
                            <td>@item.L1_AL_SAN</td>
                            <td>@(item.L1_SAN_Comparison == "Matched" ? "N" : "Y")</td>

                            <td>@item.L1_TC</td>
                            <td>@item.L1_AL_TC</td>
                            <td>@(item.L1_TC_Comparison == "Matched" ? "N" : "Y")</td>


                            <td>@item.L1_CreditAccNo</td>
                            <td>@item.L1_AL_CreditAccNo</td>
                            <td>@(item.L1_CreditAccNo_Comparison == "Matched" ? "N" : "Y")</td>

                            <td>@(item.L1_status == "2" ? "Accept" : "Reject")</td>
                            <td>@item.AL_L1_LoginId</td>

                            <td>@item.L1timestamp</td>

                        </tr>
                    }
                }
                else
                {

                    <tr>
                        <td colspan="18" style="text-align: center;color:red;">No data found</td>
                    </tr>
                }




            </tbody>
        </table>
    </div>
</div>

<hr />

