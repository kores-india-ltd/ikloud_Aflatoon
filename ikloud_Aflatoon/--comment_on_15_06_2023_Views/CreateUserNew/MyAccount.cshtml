@model iKloud.Models.UserMaster
@{
    ViewBag.Title = "MyAccount";
}

<h2>MyAccount</h2>
@section scripts{
    <script type="text/javascript" src="../../Scripts/AbidJS.js"></script>
    <script src="../../Scripts/datetimepicker_css.js" type="text/javascript"></script>
}
<input type=hidden id="tit" value="@Model.Title" />
@using (Html.BeginForm())
{
     @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)
<table style="width:115%"; id="tt">
    <tr>
        <td class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </td>
        <td>
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </td>
        <td class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </td>
        <td class="editor-field">
             @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </td>
    </tr>
    <tr>
        <td class="editor-label">
                @Html.LabelFor(model => model.Title)
            </td>
            <td class="editor-field">
                @* @Html.EditorFor(model => model.Title)
         @Html.ValidationMessageFor(model => model.Title)*@
                <select id="title" name="title">
                    <option value="select">Select</option>
                    <option value="Mr.">Mr.</option>
                    <option value="Ms.">Ms.</option>
                    <option value="Mrs.">Mrs.</option>
                    <option value="Dr.">Dr.</option>
                </select>
            </td>
            <td class="editor-label">
            Date Of Birth
        </td>
        <td >
            <input type="text" id="udob" name="udob" readonly="true" value="@Model.DOB" onclick="javascript:NewCssCal('udob');"
                style="cursor: pointer; width: 90px;" />
        </td>
    </tr>
    <tr>
        <td class="editor-label">
            @Html.LabelFor(model => model.EmailID)
        </td>
        <td class="editor-field">
            @Html.EditorFor(model => model.EmailID)
            @Html.ValidationMessageFor(model => model.EmailID)
        </td> 
    </tr>
    </table>
    <div style="text-align: left">
    <input type="submit" name="btn" id="chan" value="Update" />
        &nbsp; &nbsp;
        <input type="submit" name="btn" id="canc" value="Cancel" />
    </div>
}
<script type="text/javascript">
    document.getElementById('FirstName').focus();
    document.getElementById('FirstName').select();
    document.getElementById('title').value = document.getElementById('tit').value;
</script>
